<div class="test_card_wrapper">
  <div>
    <span class="logo">Title:</span>
    <%= @test.title %>
  </div>

  <div>
    <span class="logo">Level:</span>
    <%= @test.level %>
  </div>

  <div>
    <span class="logo">Category:</span>
    <%= @test.category.title %>
  </div>

  <div>
    <div class="logo">Questions:</div>
    <%= render @test.questions %>
  </div>

  <div class="actions_wrapper">
    <%= link_to 'Edit', edit_admin_test_path(@test), { class: "edit"} %>
    <%= link_to 'Add Question', new_admin_test_question_path(@test), { class: "edit"} %>
  </div>

</div>

<%= link_to 'Back', admin_tests_path, { class: "back"} %>
